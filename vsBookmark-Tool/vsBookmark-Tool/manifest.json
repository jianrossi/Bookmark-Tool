{
  "manifest_version": 2,

  "name": "Bookmark Tool",
  "description": "This extension uses a hot key press to record the current state of the active tab.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title":  "Bookmark page state!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}